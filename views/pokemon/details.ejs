<!-- DETAILS VIEW -->
<div class="container">
  <h1 class="text-center">Details about this Favorite</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>
  <div class="well">
    <h2>About: <%= pokemon.name %></h2>
    <form name="update-item" class="update-item" action="/pokemon/<%= pokemon.id %>" method="PUT">
      <ul class="list-group">
        <li class="list-group-item">ID: <%= pokemon.id %></li>
        <li class="list-group-item">Weight: <%= pokemon.pokeWeight %></li>
        <li class="list-group-item">Height: <%= pokemon.pokeHeight %></li>
        <li class="list-group-item"> <img src="<%= pokemon.pokeImage %>" alt="Image of pokemon"></li>
        <li class="list-group-item">Created: <%= pokemon.createdAt %></li>
        <li class="list-group-item">Updated: <%= pokemon.updatedAt %></li>
        <!-- <li>Custom Name:
          <% if (pokemon.customName) { %>
            <%= pokemon.customName %>
          <% } else { %>
            <%= pokemon.name %>
          <% } %> -->
        <!-- </li> -->
        <!-- <li>Notes: <%= pokemon.notes %></li> -->
      </ul>
      <!-- <label for="customName">Change Custom Name:</label><br>
      <input type="text" name="customName" value="<%= pokemon.customName %>"><br>
      <label for="notes">Notes about this pokemon:</label><br>
      <input type="text" name="notes" value="<%= pokemon.notes %>"><br>
      <button type="submit" class="btn btn-primary update-item">Submit Update</button> -->
    </form>
  </div>
  <div class="differentStyleSameData">
    <h2> Just a different style </h2>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%= pokemon.pokeImage %>" alt="">
        <div class="card-body">
          <h3 class="card-title">About: <%= pokemon.name %></h3>
          <ul class="list-group">
            <li class="list-group-item">ID: <%= pokemon.id %></li>
            <li class="list-group-item">Weight: <%= pokemon.pokeWeight %></li>
            <li class="list-group-item">Height: <%= pokemon.pokeHeight %></li>
            <!-- <li class="list-group-item"> <img src="<%= pokemon.pokeImage %>" alt="Image of pokemon"></li> -->
            <li class="list-group-item">Created: <%= pokemon.createdAt %></li>
            <li class="list-group-item">Updated: <%= pokemon.updatedAt %></li>
          </ul>
        </div>
      </div>
    </div>

</div>
